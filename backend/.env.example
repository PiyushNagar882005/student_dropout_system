# Backend environment variables example
# Copy this to .env (do NOT commit .env with secrets)

# URLs used by the app (dev)
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5174

# JWT secret for signing application tokens (use a long random value in production)
JWT_SECRET=change-me-for-dev

# Google OAuth (obtain from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft / Azure OAuth (obtain from Azure App Registration)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# (Optional) additional configuration
# LOG_LEVEL=debug
